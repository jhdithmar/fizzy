<div class="card__collection">
  <span class="card__id"><%= notification.card.id %></span>
  <span class="card__collection-name overflow-ellipsis">
    <%= notification.card.collection.name %>
  </span>
</div>

<div class="card__notification-meta overflow-ellipsis flex-item-grow flex-item-no-shrink align-self-end">
  <span class="card__creator"><%= notification.creator.familiar_name %></span>
</div>

<div class="card__notification-meta overflow-ellipsis flex-item-no-shrink align-self-end">
  <span class="card__timestamp"><%= local_datetime_tag(notification.created_at) %></span>
</div>
